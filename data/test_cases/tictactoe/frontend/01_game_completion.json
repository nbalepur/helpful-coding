      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-2-2"
      },
      {
        "action": "wait",
        "duration": 1000,
        "description": "Game should be over now"
      },
      {
        "assert": "elementVisible",
        "selector": "#play-again-btn",
        "expected": true,
        "description": "Play again button visible"
      },
      {
        "action": "click",
        "selector": "#play-again-btn",
        "description": "Click play again to reset"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "assert": "elementText",
        "selector": "#cell-0-0",
        "expected": "",
        "description": "Cell 0-0 is empty after reset"
      },
      {
        "assert": "elementText",
        "selector": "#cell-1-1",
        "expected": "",
        "description": "Cell 1-1 (center) is empty after reset"
      },
      {
        "assert": "elementText",
        "selector": "#cell-2-2",
        "expected": "",
        "description": "Cell 2-2 is empty after reset"
      },
      {
        "assert": "elementTextContains",
        "selector": "#game-status",
        "expected": "Human Turn",
        "description": "Status reset to Human Turn"
      },
      {
        "assert": "elementVisible",
        "selector": "#play-again-btn",
        "expected": false,
        "description": "Play again button hidden after reset"
      }
    ]
  },
