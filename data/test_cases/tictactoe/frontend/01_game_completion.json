      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-0-2"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-1-0"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-1-1"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-1-2"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
        "selector": "#cell-2-0"
      },
      {
        "action": "wait",
        "duration": 1000
      },
      {
        "action": "click",
